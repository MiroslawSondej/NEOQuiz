<Window x:Class="NEO_Quiz.Dialogs.NoResourcesDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NEO_Quiz.Dialogs"
        mc:Ignorable="d"
        WindowStyle="None"
        FontFamily="DejaVu Sans"
        xmlns:p="clr-namespace:NEO_Quiz.Properties"    
        Height="200" Width="400"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        
        <Label HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="24">
            <Label.Content>
                <AccessText TextWrapping="Wrap" Text="{x:Static p:Resources.NoResourcesFileFound}" x:Name="HeaderInfo" />
            </Label.Content>
        </Label>

        <Button Content="Ok" HorizontalAlignment="Stretch" Margin="50, 30" VerticalAlignment="Stretch" FontSize="20" Grid.Column="0" Grid.Row="1" Click="OkButton_Clicked" />

    </Grid>
</Window>
